{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --ext ts,tsx --exec 'ts-node src/server.ts'",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:watch": "nodemon --watch src --ext ts,tsx --exec 'eslint --fix'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/init -d src/config/datasource.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/datasource.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/datasource.ts",
    "migration:run:production": "typeorm-ts-node-commonjs migration:run -d dist/config/datasource.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}